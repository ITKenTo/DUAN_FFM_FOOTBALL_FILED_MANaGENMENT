<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_view_bgg"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/history"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tensan_item_user_lichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field Name:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_loaisan_item_user_lichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch Type:"
            android:textColor="#888484"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_ngaydat_item_user_lichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Date:"
            android:textColor="#5C5C5C"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_giatien_item_user_lichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price :"
            android:textColor="#E81111"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>


</LinearLayout>