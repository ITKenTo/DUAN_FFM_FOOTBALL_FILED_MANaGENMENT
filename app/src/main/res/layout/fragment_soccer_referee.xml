<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ListOfCustomersFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_login"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="List of customers"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:gravity="center"
            android:fontFamily="@font/ubuntubold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_arbitration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:queryHint="Search Here......"
        android:padding="10dp"
        android:background="@drawable/search_view_bgg"
        app:iconifiedByDefault="false"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/ubuntumedium"
            android:text="Total user: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/ubuntumedium"
            android:id="@+id/ivtotaluser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rycycleViewarbitration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp" />

