<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_yard1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_login"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Statistical"
            android:textSize="20dp"
            android:textColor="#00BCD4"
            android:gravity="center"
            android:fontFamily="@font/ubuntubold"
            android:textAlignment="center"
            android:layout_marginBottom="40dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_date_home_admin"
            android:textStyle="bold"
            android:layout_weight="5"
            android:textSize="20dp"
            android:text="Date :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date_yard"
            android:layout_weight="1"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="ngafy "
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Total :"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_total_yard"
            android:textSize="20dp"
            android:textColor="#D8E91E63"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_yard_home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:queryHint="Search Here......"
        android:padding="3dp"
        android:background="@drawable/search_view_bgg"
        app:iconifiedByDefault="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:id="@+id/tv_casan_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18dp"
            android:text="Ca Sân"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_giathue_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18dp"
            android:text="Giá Thuê"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_ngaydat_yard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18dp"
            android:text="Ngày Đặt"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#C0C0C0"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_statistical"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
</LinearLayout>