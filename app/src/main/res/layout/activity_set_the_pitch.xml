<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SetThePitchActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_login">

            <ImageView
                android:id="@+id/back_home"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/back_left"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Set The Pitch"
                android:textSize="20dp"
                android:textColor="#00BCD4"
                android:gravity="center"
                android:fontFamily="@font/ubuntubold"
                android:textAlignment="center"
                android:layout_marginBottom="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/img_pitch"
                        android:scaleType="centerCrop"
                        />

                </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="date:"
                android:layout_gravity="right"
                android:fontFamily="@font/ubuntumedium"
                android:padding="5dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:padding="10dp"
                    android:text="Tên Sân: Sân 7A"
                    android:fontFamily="@font/ubuntumedium"

                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:padding="10dp"
                    android:text="Loại Sân: Sân 7"
                    android:fontFamily="@font/ubuntumedium"

                    />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/date_tiem"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:padding="10dp"
                    android:textSize="25dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    style="@style/Widget.Material3.TextInputEditText.FilledBox"
                    android:padding="10dp"
                    android:textSize="25dp"
                    android:enabled="false"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:padding="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Total: 250.000 VNĐ"
                    android:textColor="#E91E63"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Set The Pitch"
            android:textSize="20dp"
            android:padding="10dp"
            android:backgroundTint="#009688"
            />

    </LinearLayout>
</layout>