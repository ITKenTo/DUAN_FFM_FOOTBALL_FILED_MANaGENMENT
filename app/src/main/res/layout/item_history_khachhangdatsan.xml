<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_update"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/img_pitch2"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icondelete"
                android:layout_marginTop="-1dp"
                android:layout_gravity="right"
                android:padding="10dp"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:text="Adress:  Đường Lê Đức Thọ, Phường Mỹ Đình 1, Quận Nam Từ Liêm, Hà Nội"
            android:fontFamily="@font/poppinsmedium"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_history_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:text="Pitch name: "
                android:fontFamily="@font/poppinsmedium"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/tv_history_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date: "
                android:textColor="#333333"
                android:fontFamily="@font/poppinsmedium"
                android:padding="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_history_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time: "
            android:textColor="#333333"
            android:fontFamily="@font/poppinsmedium"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_history_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price: "
            android:fontFamily="@font/poppinsbold"
            android:textSize="21dp"
            android:textColor="	#FF0000"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_status_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng thái: "
            android:textColor="#333333"
            android:fontFamily="@font/poppinsmedium"
            android:padding="5dp"
            />
    </LinearLayout>






</androidx.cardview.widget.CardView>