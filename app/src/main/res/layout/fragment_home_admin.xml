<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_footbal"
    tools:context=".Fragment.HomeYardOwnerFragment">
    <TextView
        android:id="@+id/tv_date_home_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="DATE:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_Tongtien_admin_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Tong thu nhap ngay"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/tv_casan_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Ca Sân"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_giathue_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Giá Thuê"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_Trangthai_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Trang Thái"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#C0C0C0"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_home_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"/>

</LinearLayout>