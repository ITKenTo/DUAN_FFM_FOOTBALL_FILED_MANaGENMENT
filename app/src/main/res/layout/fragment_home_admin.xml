<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_marginBottom="10dp"
        android:text="Statistical"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date_home_admin"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date_yard"
            android:layout_marginLeft="5dp"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Tổng tiền :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <SearchView
        android:iconifiedByDefault="false"
        android:background="@drawable/searchview_bg"
        android:queryHint="Nhập để tìm kiếm"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/tv_casan_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Ca Sân"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_giathue_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Giá Thuê"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#C0C0C0"
            />
        <TextView
            android:id="@+id/tv_Trangthai_admin_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="Trang Thái"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#C0C0C0"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>